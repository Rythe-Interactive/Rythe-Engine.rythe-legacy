#version 450

generate(vertex, fragment)

#include <stdio.shinc>


shader(vertex)
{
    void main(void)
    {
        gl_Position = ModelToScreenSpacePosition(position);
        PropagateStdIO();
    }
}

shader(fragment)
{
    uniform sampler2DArray textures;
    void main(void)
    {
        SubmitOutput(mix(texture(textures[0], stdio(uv)),texture(textures[1], stdio(uv))));
    }
}